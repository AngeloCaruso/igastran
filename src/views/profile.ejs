<%- contentFor('bodyType') %>

<body class="profile-page">
    <%- contentFor('navOptions') %>
    <%- '<li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>' %>
    <%- contentFor('body') %>
    <%- '<'+'div class="page-header header-filter clear-filter parallax" style="background-image: url('+ "/images/uploaded_images/"+ bg +');background-attachment: inherit;background-repeat: round;" data-parallax="true">'%>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="profile main main-raised">
                    <div class="avatar">
                        <%- '<' + 'img src="/images/uploaded_images/'+imgP+'" alt="not-found" class="img-raised rounded-circle img-fluid profimg">' %>
                    </div>
                    <div class="name">
                        <h3>
                            <%= user.nombre + ' ' + user.apellidos %>
                        </h3>
                        <h5>
                            <%= user.username %>
                        </h5>
                    </div>
                    <div class="follow">
                        <!--<button class="btn btn-fab btn-rose btn-round btn_follow">
                            <i class="material-icons">add</i>
                            <div class="ripple-container"></div>
                        </button> -->
                    </div>
                    <div class="row">
                        <div class="col">
                            <ul class="nav nav-pills nav-pills-rose flex-column mb-3">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#imagenes" data-toggle="tab">Imagenes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#datos" data-toggle="tab">Editar perfil</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#" class="nav-link btnLogout" data-toggle="tab">Cerrar
                                        sesión</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="main main-raised">
                    <div class="container">
                        <!-- Imagenes del usuario -->
                        <div class="tab-content">
                            <div class="tab-pane active" id="imagenes">
                                <div class="card card-nav-tabs card-plain">
                                    <div class="card-header card-header-rose">
                                        <div class="nav-tabs-navigation">
                                            <div class="nav-tabs-wraper">
                                                <ul class="nav nav-tabs justify-content-center" data-tabs="tabs">
                                                    <li class="nav-item"><a class="nav-link active" href="#subidas"
                                                            data-toggle="tab">Mis imagenes</a></li>
                                                    <li class="nav-item"><a class="nav-link" href="#mg" data-toggle="tab">Seguidores</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="subidas">
                                                <div class="imgContainer mt-1 mb-1 mr-1 ml-1">
                                                    <% imgList.map(img => {%>
                                                    <%- `<div class="imgWr cardImg mt-0 mb-0" href="/images/uploaded_images/${img.foto}"><img class="imgC" src="/images/uploaded_images/${img.foto}" style="grid-column: auto/span 2"></div>`%>
                                                    <% }) %>
                                                </div>
                                            </div>
                                            <div class="tab-pane" id="mg">
                                                <div class="section">
                                                    <div class="row">
                                                        <div class="col">
                                                            Personas que te siguen
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <% followers.map(user =>{ %>
                                                        <%- '<div class="col-md-6"><div class="card"><img class="align-self-center f_img rounded-circle img-fluid card-img-top" src="/images/uploaded_images/'+user.fp_follower+'" alt="Generic placeholder image"><div class="media-body text-center"><h4>'+user.nombre+'</h4><p>'+user.follower+'</p></div></div></div>'%>
                                                        <% }) %>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col">
                                                            Personas a las que sigues
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <% following.map(user =>{ %>
                                                        <%- '<div class="col-md-6"><div class="card"><img class="align-self-center f_img rounded-circle img-fluid card-img-top" src="/images/uploaded_images/'+user.fp_follower+'" alt="Generic placeholder image"><div class="media-body text-center"><h4>'+user.nombre+'</h4><p>'+user.follower+'</p></div></div></div>'%>
                                                        <% }) %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="datos">
                                <!-- Editar datos del usuario -->
                                <div class="section">
                                    <div class="editarPerfil">
                                        <div class="row">
                                            <div class="col">
                                                <form action="/updateProfile" method="POST" enctype="multipart/form-data">
                                                    <label for="inputP">Haz click aquí para cargar una foto de perfil</label>
                                                    <div class="inputUpdate">
                                                        <input id="inputUpdate" type="file" name="updateProf" required>
                                                    </div>
                                                    <button class="btn btn-rose">Guardar</button>
                                                </form>
                                            </div>
                                            <div class="col">
                                                <form action="/updateBg" method="POST" enctype="multipart/form-data">
                                                    <label for="inputBg">Haz click aquí para cargar un fondo para tu
                                                        perfil</label>
                                                    <div class="inputUpdate">
                                                        <input id="inputBg" type="file" name="updateBg" required>
                                                    </div>
                                                    <button class="btn btn-rose">Guardar</button>
                                                </form>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group bmd-form-group col-md-6">
                                                <label for="inputName" class="bmd-label-floating">Nombre</label>
                                                <input type="text" name="nombre" id="inputName" class="form-control">
                                            </div>
                                            <div class="form-group bmd-form-group col-md-6">
                                                <label for="inputApellidos" class="bmd-label-floating">Apellidos</label>
                                                <input type="text" name="apellidos" id="inputApellidos" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group bmd-form-group col">
                                                <label for="inputUsuario" class="bmd-label-floating">Usuario</label>
                                                <input type="text" name="usuario" id="inputUsuario" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group bmd-form-group col-md-6">
                                                <label for="inputPass" class="bmd-label-floating">Contraseña</label>
                                                <input type="text" name="password" id="inputPass" class="form-control">
                                            </div>
                                            <div class="form-group bmd-form-group col-md-6">
                                                <label for="inputPassConf" class="bmd-label-floating">Confirmar
                                                    contraseña</label>
                                                <input type="text" name="" id="inputPassConf" class="form-control">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col text-center">
                                                <button class="btn btn-rose">Guardar cambios</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>